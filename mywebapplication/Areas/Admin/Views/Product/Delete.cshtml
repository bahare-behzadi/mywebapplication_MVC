@model Product
<form method="post">
    <input asp-for="Id" hidden />
    <fieldset>
        <div class="row">
            <h2 class="text-primary">Delete a Product</h2>
        </div>
        <div class="row pb-2">
            <label asp-for=Title class="form-label my-4 p-0"></label>
            <input asp-for="Title" disabled class="form-control">

        </div>
        <div class="row pb-5">
            <label asp-for=Author class="form-label mt-4 p-0"></label>
            <input asp-for="Author" disabled class="form-control">

        </div>

        <div class="row pb-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </fieldset>
</form>

