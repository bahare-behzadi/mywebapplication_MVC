@model Category
<form method="post">
    <input asp-for="Id" hidden />
    <fieldset>
        <div class="row">
            <h2 class="text-primary">Edit a Category</h2>
        </div>
        <div class="row pb-2">
            <label asp-for=Name class="form-label mt-4 p-0"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row pb-5">
            <label asp-for=CategoryOrder class="form-label mt-4 p-0"></label>
            <input asp-for="CategoryOrder" class="form-control">
            <span asp-validation-for="CategoryOrder" class="text-danger"></span>
        </div>

        <div class="row pb-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </fieldset>
</form>
@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }

}
